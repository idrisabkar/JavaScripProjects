
<%- include("partials/header"); -%>
    <h1>Home</h1>
    <p> <%= startingContent %> </p>
    <p>
      <div class="posts">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Add New Post</h5>
            <p class="card-text">Click the button below to create a new post.</p>
            <a href="/compose"><button id = "add" class="btn btn-primary rounded-pill">Add Post</button></a>
          </div>
        </div>
      </p>
    
  
    <%  for(const post of posts){ %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%=post.title%></h5>
          <p class="card-text"><%=post.content.substring(0, 100) + " ..."%></p>
          <a href="/posts/<%=post.title%>"><button class="btn btn-primary rounded-pill">Read More</button></a>
        </div>
      </div>
      <% } %>
      </div>


<%- include("partials/footer"); -%>
